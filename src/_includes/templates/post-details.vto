<div class="post-details">
  {{ if author }}
    {{ set page = search.page(`type=author author="author"`) }}
    {{ if page }}
      <p>{{ i18n.post.by}} <a data-pagefind-filter="author" href="{{ page.data.url }}">{{ author }}</a></p>
    {{ else }}
      <p>{{ i18n.post.by}} {{ author }}</p>
    {{ /if }}
  {{ /if }}

  <p>
    <time datetime="{{ date |> date('DATE') }}">
      {{ date |> date('DATE') }}
    </time>
  </p>
  
  <div class="post-tagsss">
    {{ for tag of tags }}
      {{ set page = search.page(`type=tag tag="${tag}"`) }}

      {{ if page }}
        <a data-pagefind-filter="filter" class="badge" href="{{ page.data.url }}">{{ tag }}</a>
      {{ /if }}
    {{ /for }}
  </div>
</div>
